{
    "name": "nswdpc/silverstripe-inline-linker",
    "description": "Inline Link field that saves to gorriecoe/link",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "linkfield",
        "link",
        "inline link editing"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James",
            "role" : "Developer"
        }
    ],
    "require": {
        "codem/silverstripe-html5-inputs": "^1",
        "gorriecoe/silverstripe-link": "^1.0.0",
        "silverstripe/asset-admin": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3"
    },
    "extra": {
        "expose": [
            "client/dist/js",
            "client/static/styles"
        ]
    },
    "autoload": {
        "psr-4": {
            "NSWDPC\\InlineLinker\\": [
                "src/Extensions/",
                "src/Forms/"
            ],
            "NSWDPC\\InlineLinker\\Tests\\": "tests/"
        }
    }
}
